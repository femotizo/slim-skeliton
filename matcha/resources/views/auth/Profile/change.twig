{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-defult">
                <div class="panel-heading ">Change Profile</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.profile.change') }}" method="post">

                        <div class="form-group{{ errors.age ? ' has-error' : '' }}">
                            <label for="age">Age</label>
                            <input type="number" name="age" id="age" class="form-control" placeholder="Enter Current Age">
                            {% if (errors.age) %}
                                <span class="help-block">{{ errors.age | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group{{ errors.interests ? ' has-error' : '' }}">
                            <label for="password">Interests</label>
                            <input type="text" name="interests" id="interests" class="form-control" placeholder="Enter your #interests">
                            {% if (errors.interests) %}
                                <span class="help-block">{{ errors.interests | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group{{ errors.phone_number ? ' has-error' : '' }}">
                            <label for="phone_number">Phone Number</label>
                            <input type="tel" name="phone_number" id="phone_number" class="form-control" placeholder="+277">
                            {% if (errors.phone_number) %}
                                <span class="help-block">{{ errors.phone_number | first }}</span>
                            {% endif %}
                        </div>

                        <button type="submit" class="btn btn-default">Update Profile</button>

                        {{ csrf.field | raw }}

                    </form>
                </div>

            </div>

        </div>
    </div>
{% endblock %}